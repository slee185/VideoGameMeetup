<%- include('../partials/header.ejs') %>
  <main>
    <h1>Edit <%= event.name%> <br> </h1>

      <form method = "POST" action = "/events/<%= event.id%>?_method=PUT" class="form">
        <div class="form-info"> 
          <div class="form-labels">
            <label for="name" ><b>Name:</b></label> <br><br>
            <label for="game" ><b>Game:</b></label> <br><br>
            <label for="category" ><b>Category:</b></label> <br><br>
            <label for="platform"><b>Platform:</b></label><br><br>
            <label for="host"><b>Host:</b></label><br><br>
            <label for="details"><b>Details:</b></label><br><br>
            <label for="location"><b>Location:</b></label><br><br>
            <label for="date"><b>Date:</b></label><br><br>
            <label for="startTime"><b>Start Time:</b></label><br><br>
            <label for="endTime"><b>End Time:</b></label><br><br>
            <label for="file_extension"><b>Add Flyer:</b></label><br><br>
          </div>

          <div class="form-answers">
            <input type="text" id="name" name="name" value="<%= event.name%>" class="input-field" required> <!--title-->
            <input type="text" id="game" name="game" value="<%= event.game%>" class="input-field" required>
            <select id="category" name="type" class="select.input-field" required>
              <option value="tournament" <%= event.type === 'tournament' ? 'selected' : '' %>>Tournament</option>
              <option value="free-play" <%= event.type === 'free-play' ? 'selected' : '' %>>Free Play</option>
            </select>    
            <select id="platform" name="platform" class="select.input-field" required> 
              <option value="nintendo-switch" <%= event.platform === 'nintendo-switch' ? 'selected' : '' %>>Nintendo Switch</option>
              <option value="xbox" <%= event.platform === 'xbox' ? 'selected' : '' %>>Xbox</option>
              <option value="playstation" <%= event.platform === 'playstation' ? 'selected' : '' %>>Playstation</option>
              <option value="mobile" <%= event.platform === 'mobile' ? 'selected' : '' %>>Mobile</option>
              <option value="pc" <%= event.platform === 'pc' ? 'selected' : '' %>>PC</option>
              <option value="other" <%= event.platform === 'other' ? 'selected' : '' %>>Other</option>
            </select>  
            <input type="text" id="host" name="host" value="<%= event.host%>" class="input-field" required> 
            <input type="text" id="details" name="details" value="<%= event.details%>"  class="input-field" required>   
            <input type="text" id="location" name="location" value="<%= event.location%>"  class="input-field" required>  
            <input type="date" id="date" name="date" value="<%= event.date%>" class="input-field" required>
            <input type="time" id="startTime" name="startTime"  value="<%= event.startTime%>" class="input-field" required> 
            <input type="time" id="endTime" name="endTime" value="<%= event.endTime%>" class="input-field" required>
            <input id="file_extension" name="file_extension" value="<%= event.imageFlyer%>" class="input-field" type="file" accept="file_extension/*"> <br>
            <input type="submit" value="submit"> <br><br>
          </div>
        </div>
      </form> 
    </main>
<%- include('../partials/footer.ejs')%>
